---
import CarIcon from "./CarIcon.astro";
---

<nav>
    <div class="container mx-auto">
        <div class="flex justify-between px-4 md:px-0 md:">
            <div class="flex">
                <!-- Logo -->
                <div>
                    <a href="/" class="flex items-center py-5  text-gray-800">
                        <div class="font-semibold text-2xl text-white flex items-center"> <CarIcon width="28" height="28" fill="#fff"/>  Automotive Consulting</div>
                    </a>
                </div>
            </div>

            <!-- Primary Navbar items -->
            <div class="hidden md:flex items-center">
                <a href="/" class="py-5 px-3 text-white hover:text-gray-400">Inicio</a>
                <a href="/nosotros" class="py-5 px-3 text-white hover:text-gray-400">Nosotros</a>
                <a href="/catalogo/1" class="py-5 px-3 text-white hover:text-gray-400">Catálogo</a>
                <a href="/contacto" class="py-5 px-3 text-white hover:text-gray-400">Contacto</a>
            </div>

            <!-- Mobile menu button -->
            <div class="md:hidden flex items-center">
                <button class="mobile-menu-button">
                    <svg class="w-6 h-6 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" /></svg>
                </button>
            </div>
        </div>
    </div>

    <!-- mobile menu -->
    <div class="mobile-menu hidden md:hidden">
        <a href="/" class="block py-2 px-4 text-sm  text-white hover:text-gray-400">Inicio</a>
        <a href="/nosotros" class="block py-2 px-4 text-sm  text-white hover:text-gray-400">Nosotros</a>
        <a href="/catalogo/1" class="block py-2 px-4 text-sm  text-white hover:text-gray-400">Catálogo</a>
        <a href="/contacto" class="block py-2 px-4 text-sm  text-white hover:text-gray-400">Contacto</a>
    </div>
</nav>

<script>
    const btn = document.querySelector("button.mobile-menu-button");
    const menu = document.querySelector(".mobile-menu");

    btn.addEventListener("click", () => {
        menu.classList.toggle("hidden");
    });
</script>