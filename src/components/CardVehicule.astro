---
interface CardVehicule {
  name: string;
  imageUrl: string;
  price: number;
  id: string;
  brand: string;
  fuelType: string;
  miles: number;
  transmission: string;
  available: boolean;
}
const { name, imageUrl, price, brand, fuelType, miles, transmission, id, available } =
  Astro.props;

// Convertir el nombre del vehículo a un slug amigable para URL
const carNameSlug = name.replace(/ /g, "-").toLowerCase();
---

<div class="mx-auto">
  <div class="max-w-sm cursor-pointer rounded-lg bg-white p-2 shadow duration-150 hover:scale-105 hover:shadow-md">
    <div class="h-[300px] w-full overflow-hidden rounded-t-lg">
      <a href={`/car/${carNameSlug}/${id}`}>
        <img
          class="h-full w-full object-cover"
          src={imageUrl}
          alt={name}
        />
      </a>
      
    </div>
    <p class="bg-slate-900 px-4 py-0.5 text-lg font-semibold text-white">
      ${price.replace(/,/g, ".")}
    </p>
    <div>
      <div class="my-6 flex items-center justify-between px-4 h-10">
        <a href={`/car/${id}`} class="font-bold text-slate-900 text-[16px]">{name}</a>
      </div>
      <div class="my-4 flex items-center justify-between px-4">
        <p class="text-sm font-semibold text-gray-500">Disponible</p>
        {available ? (
          <p class="rounded-full bg-green-200 px-2 py-0.5 text-xs font-semibold text-green-600">Sí</p>
        ) : (
          <p class="rounded-full bg-red-200 px-2 py-0.5 text-xs font-semibold text-red-600">No</p>
        )}
      </div>
      <div class="my-4 flex items-center justify-between px-4">
        <p class="text-sm font-semibold text-gray-500">Marca</p>
        <p class="rounded-full bg-gray-200 px-2 py-0.5 text-xs font-semibold text-gray-600">{brand}</p>
      </div>
      <div class="my-4 flex items-center justify-between px-4">
        <p class="text-sm font-semibold text-gray-500">Tipo Combustible</p>
        <p class="rounded-full bg-gray-200 px-2 py-0.5 text-xs font-semibold text-gray-600">{fuelType}</p>
      </div>
      <div class="my-4 flex items-center justify-between px-4">
        <p class="text-sm font-semibold text-gray-500">KM</p>
        <p class="rounded-full bg-gray-200 px-2 py-0.5 text-xs font-semibold text-gray-600">{miles}</p>
      </div>
      <div class="my-4 flex items-center justify-between px-4">
        <p class="text-sm font-semibold text-gray-500">Transmisión</p>
        <p class="rounded-full bg-gray-200 px-2 py-0.5 text-xs font-semibold text-gray-600">{transmission}</p>
      </div>
    
    </div>
  </div>
</div>
