---
import { Image } from "astro:assets";
import banner1 from "../assets/banners/banner1.png";
import banner2 from "../assets/banners/banner2.png";
import banner3 from "../assets/banners/banner3.png";
---

<section class="mt-3 md:mt-10">
  <section id="slider2" class="splide" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
      <ul class="splide__list">
        <li class="splide__slide">
          <Image src={banner1} alt="slide 1" />
          <li class="splide__slide">
            <Image src={banner2} alt="slide 1" />
            <li class="splide__slide"><Image src={banner3} alt="slide 1" /></li>
          </li>
        </li>
      </ul>

      <script>
        import "@splidejs/splide/css";
        import Splide from "@splidejs/splide";

        let slider = new Splide("#slider2", {
          type: "loop",
          gap: "5vw",
          focus: "center",
          autoplay: true,
          interval: 5000,
          pauseOnHover: false,
          perPage: 1,
        });
        slider.mount();
      </script>
    </div>
  </section>
</section>
