
<section>
  <section id="slider2" class="splide" aria-label="Splide Basic HTML Example">
    <div class="splide__track">
      <ul class="splide__list">
          <li class="splide__slide"><img src="/images/banners/banner1.png" alt="slide 1" /></li>
          <li class="splide__slide"><img src="/images/banners/banner2.png" alt="slide 2" /></li>
          <li class="splide__slide"><img src="/images/banners/banner3.png" alt="slide 3" /></li>
      </ul>

      <script>
        import "@splidejs/splide/css";
        import Splide from "@splidejs/splide";

        let slider = new Splide("#slider2", {
          type: "loop",
          gap: "5vw",
          focus: "center",
          autoplay: true,
          interval: 5000,
          pauseOnHover: false,
          perPage: 1,
        });
        slider.mount();
      </script>
    </div>
  </section>
</section>
